{
    "type": "project",
    "license": "MIT",
    "minimum-stability": "stable",
    "prefer-stable": true,
    "homepage": "http://vankosoft.org",
    "description": "Vankosoft Extended Project",
    "authors": [
        {
            "name": "Ivan I. Atanasov"
        }
    ],
    "keywords": [
        "symfony",
        "vankosoft",
        "application",
        "catalog",
        "products",
        "services",
        "pricing-plans",
        "shopping-cart",
        "api",
        "api-platform",
        "video-hosting-platform",
        "youtube-channels",
        "video-player"
    ],
    "require": {
        "php": "^8.1",
        "ext-ctype": "*",
        "ext-iconv": "*",
        
        "symfony/dotenv": "6.4.*",
        "symfony/flex": "^1.17|^2",
        "symfony/notifier": "6.4.*",
        "symfony/runtime": "6.4.*",
        "symfony/http-client": "6.4.*",
        
        "vankosoft/application": "1.12.*",
        "vankosoft/application-themes": "^1.5",
        "vankosoft/catalog-bundle": "^2.3",
        "vankosoft/api-bundle": "^3.0",
        
        "opencoconut/coconut": "^3.0",
        "toin0u/digitalocean-v2": "^5.0",
        "league/flysystem-aws-s3-v3": "^3.29",
        "google/apiclient": "^2.15",
        
        "fmonts/ffmpeg-bundle": "^0.8",
        "intervention/zodiac": "^5.0"
    },
    "require-dev": {
        "phpunit/phpunit": "^9.5",
        "symfony/browser-kit": "6.4.*",
        "symfony/css-selector": "6.4.*",
        "symfony/debug-bundle": "6.4.*",
        "symfony/maker-bundle": "^1.0",
        "symfony/phpunit-bridge": "^7.0",
        "symfony/stopwatch": "6.4.*",
        "symfony/var-dumper": "6.4.*",
        "symfony/web-profiler-bundle": "6.4.*"
    },
    "config": {
         "optimize-autoloader": true,
        "preferred-install": {
            "*": "dist"
        },
        "sort-packages": true,
        "allow-plugins": {
            "composer/installers": true,
            "symfony/flex": true,
            "oomphinc/composer-installers-extender": true,
            "symfony/runtime": true,
            "php-http/discovery": true
        }
    },
    "autoload": {
        "psr-4": {
            "App\\": "src/"
        }
    },
    "autoload-dev": {
        "psr-4": {
            "App\\Tests\\": "tests/"
        }
    },
    "replace": {
        "symfony/polyfill-ctype": "*",
        "symfony/polyfill-iconv": "*",
        "symfony/polyfill-php72": "*"
    },
    "scripts": {
        "auto-scripts": {
            "cache:clear": "symfony-cmd",
            "assets:install %PUBLIC_DIR%/admin-panel": "symfony-cmd",
            "liip:imagine:cache:remove": "symfony-cmd"
        },
        "post-install-cmd": [
            "@auto-scripts"
        ],
        "post-update-cmd": [
            "@auto-scripts"
        ]
    },
    "conflict": {
        "symfony/symfony": "*"
    },
    "extra": {
        "symfony": {
            "allow-contrib": false,
            "require": "6.4.*"
        }
    }
}
