{% extends "@VSApplication/layout.html.twig" %}

{# Import Macros #}
{% from '@SyliusResource/Macros/actions.html.twig' import create %}
{% import "@VSApplication/Macros/form.html.twig" as vs_form %}

{% if( item.id ) %}
    {% set pageTitle = ( 'vs_vvp.template.page_title_video_genre_update' | trans( {},'VanzVideoPlayer' ) ) ~ ': ' ~ item.name %}
{% else %}
    {% set pageTitle = 'vs_vvp.template.page_title_video_genre_create' | trans( {},'VanzVideoPlayer' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle }}{% endblock %}
{% block pageTitle %}
    <h4 class="pageheader-title">
        <i class="ri-layout-6-line"></i> 
        {{ pageTitle }}
    </h4>
{% endblock %}

{% block content %}
    <div class="row">
        <!-- ============================================================== -->
        <!-- basic tabs  -->
        <!-- ============================================================== -->
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
            	<h5 class="card-header">{{ 'vs_vvp.template.page_title_video_genre_details'  | trans( {},'VanzVideoPlayer' ) }}</h5>
            	<div class="card-body">

                    {% if useFormMethod is defined %}{% set formMethod = useFormMethod %}{% else %}{% set formMethod = 'PUT' %}{% endif %}
            		
                    {{ form_start(form, { 'attr': {'class': 'form-horizontal '}, 'method': formMethod }) }}

                        {% if form_errors(form) is not empty %}
                            <div class="alert alert-block alert-danger fade in">
                                <button type="button" class="close close-sm" data-dismiss="alert">
                                    <i class="fa fa-times"></i>
                                </button>
                                <strong>Error!</strong> {{ form_errors(form) }}
                            </div>
                        {% endif %}
    					
    					<div class="form-group">
                            {{ form_label(form.currentLocale, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.currentLocale, {'attr': {'class': 'form-control'}}) }}
                        </div>
                        	
                        <div class="form-group">
                            {{ form_label(form.name, null, {
                                'label_attr': {'class': 'form-label'}
                                }) 
                            }}
                            
                            {{ form_widget(form.name, {'attr': {'class': 'form-control'}, 'value': item.name}) }}
                        </div>

            			{{ vs_form.buttons( form, metadata ) }}
                    {{ form_end(form, {'render_rest': false}) }}
                </div>
            </div>
        </div>
    </div>
{% endblock %}
