<!-- content -->
<section class="content">
    <div class="content__head">
        <div class="container">
        
        {#
            <div class="row">
                <div class="col-12 col-lg-8">
                    {{ vs_widget_render( 'videos-discover-section', ['video-comments'] ) }}
                </div>
            </div>
        #}
        
            <div class="row">
                <div class="col-12">
                    <!-- content title -->
                    <h2 class="content__title">{{ 'vs_vvp.template.movies.discover' | trans( {},'VanzVideoPlayer' ) }}</h2>
                    <!-- end content title -->

                    <!-- content tabs nav -->
                    <ul class="nav nav-tabs content__tabs" id="content__tabs" role="tablist">
                        <li class="nav-item" role="presentation">
                            <button id="1-tab" class="active" data-bs-toggle="tab" data-bs-target="#tab-1" type="button" role="tab" aria-controls="tab-1" aria-selected="true">
                                {{ 'vs_vvp.template.movies.comments' | trans( {},'VanzVideoPlayer' ) }}
                            </button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button id="2-tab" data-bs-toggle="tab" data-bs-target="#tab-2" type="button" role="tab" aria-controls="tab-2" aria-selected="false">
                                {{ 'vs_vvp.template.movies.reviews' | trans( {},'VanzVideoPlayer' ) }}
                            </button>
                        </li>

                        <li class="nav-item" role="presentation">
                            <button id="3-tab" data-bs-toggle="tab" data-bs-target="#tab-3" type="button" role="tab" aria-controls="tab-3" aria-selected="false">
                                {{ 'vs_vvp.template.movies.photos' | trans( {},'VanzVideoPlayer' ) }}
                            </button>
                        </li>
                    </ul>
                    <!-- end content tabs nav -->
                </div>
            </div>
        </div>
    </div>

    <div class="container">      
        <div class="row">
            <div class="col-12 col-lg-8">
                <!-- content tabs -->
                <div class="tab-content">
                    <div class="tab-pane fade show active" id="tab-1" role="tabpanel" aria-labelledby="1-tab" tabindex="0">
                        {% include 'Pages/Movies/Partial/MovieDiscover/tab-comments.html.twig' %}
                    </div>

                    <div class="tab-pane fade" id="tab-2" role="tabpanel" aria-labelledby="2-tab" tabindex="0">
                        {% include 'Pages/Movies/Partial/MovieDiscover/tab-reviews.html.twig' %}
                    </div>

                    <div class="tab-pane fade" id="tab-3" role="tabpanel" aria-labelledby="3-tab" tabindex="0">
                        {% include 'Pages/Movies/Partial/MovieDiscover/tab-gallery.html.twig' %}
                    </div>
                </div>
                <!-- end content tabs -->
            </div>

            <!-- sidebar -->
            <div class="col-12 col-lg-4">
                {{ vs_widget_render( 'videos-discover-section', ['video-suggestions'] ) }}
            </div>
            <!-- end sidebar -->
        </div>
    </div>
</section>
