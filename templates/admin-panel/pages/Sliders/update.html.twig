{% extends "@VSApplication/layout.html.twig" %}

{% if( item.id ) %}
    {% set pageTitle = ( 'vs_vvp.template.page_title_slider_item_update' | trans( {},'VanzVideoPlayer' ) ) ~ ': ' ~ item.title %}
{% else %}
    {% set pageTitle = 'vs_vvp.template.page_title_slider_item_create' | trans( {},'VanzVideoPlayer' ) %}
{% endif %}

{% block title %}{{ parent() }} :: {{ pageTitle }}{% endblock %}
{% block pageTitle %}<i class="icon_genius"></i> {{ pageTitle }}{% endblock %}
{% block content %}
    <div class="row">
        <div class="col-xl-12 col-lg-12 col-md-12 col-sm-12 col-12">
            <div class="card">
            	<h5 class="card-header">{{ 'vs_vvp.template.page_title_slider_item_details'  | trans( {},'VanzVideoPlayer' ) }}</h5>
            	<div class="card-body">
            	
                    {% if form_errors(form) is not empty %}
                        <div class="alert alert-block alert-danger fade in">
                            <button type="button" class="close close-sm" data-dismiss="alert">
                                <i class="icon-remove"></i>
                            </button>
                            <strong>Error!</strong> {{ form_errors(form) }}
                        </div>
                    {% endif %}
                        
                    <div id="FormContainer" data-itemId="{{ item.id }}">
                        {% include 'admin-panel/pages/Sliders/slider_form.html.twig' %}
                    </div>
                    
                </div>
            </div>
        </div>
    </div>
{% endblock %}

{% block head_styles %}
    {{ parent() }}
    
    {{ encore_entry_link_tags( 'js/sliders-edit', null, 'CustomEntries' ) }}
{% endblock %}

{% block body_scripts %}
    {{ parent() }}
    
    {{ encore_entry_script_tags( 'js/sliders-edit', null, 'CustomEntries' ) }}
{% endblock %}
