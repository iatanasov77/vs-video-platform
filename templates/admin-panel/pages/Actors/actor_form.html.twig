{# Import Macros #}
{% from '@SyliusResource/Macros/actions.html.twig' import create %}
{% import "@VSApplication/Macros/OneUpUpload/progressbar.html.twig" as vs_progressbar %}
{% import "@VSApplication/Macros/OneUpUpload/oneup_upload.html.twig" as vs_oneup_upload %}
{% import "@VSApplication/Macros/form.html.twig" as vs_form %}
{% import "@VSApplication/Macros/tree.html.twig" as vs_tree %}

{% if(item.id) %}{% set method = "PUT" %}{% else %}{% set method = "POST" %}{% endif %}
{{ form_start(form, { 'attr': {'class': 'form-horizontal ', 'id': 'FormActor'}, 'method': method }) }}

    {{ form_widget( form.actorVideos ) }}

    <div class="form-group">
        {{ form_label(form.locale, null, {
            'label_attr': {'class': 'col-form-label'}
            }) 
        }}
        
        {{ form_widget(form.locale, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.name, null, {
            'label_attr': {'class': 'col-form-label'}
            }) 
        }}
        
        {{ form_widget(form.name, {'attr': {'class': 'form-control'}}) }}
    </div>
    
    <div class="form-group">
        {{ form_label(form.description, null, {
            'label_attr': {'class': 'col-form-label'}
            }) 
        }}
        
        {{ form_widget(form.description, {'attr': {'class': 'form-control'}}) }}
    </div>

    <div class="row">&nbsp;</div>
    
    <fieldset class="border border-dark rounded p-3">
        <legend class="w-auto float-none ps-2 pe-2">{{ 'vs_vvp.form.actor.photos' | trans( {},'VanzVideoPlayer' ) }}</legend>
        
        <div id="PhotosContainer"
            data-prototype="{% apply escape %}{% include 'admin-panel/pages/Actors/add-photo-prototype.html.twig' with {'form': form.photos.vars.prototype} %}{% endapply %}"
        > 
            {% for photo in form.photos %}
                {% include 'admin-panel/pages/Actors/add-photo-prototype.html.twig' with {'form': photo} %}
            {% endfor %}
        </div>
    </fieldset>
    
    <div class="row">&nbsp;</div>
    
    <div class="form-group">
        {{ form_label(form.videos, null, {
            'label_attr': {'class': 'col-form-label'}
            }) 
        }}
        
        {{ form_widget(form.videos, {'attr': {
            'class': 'form-control',
            'data-placeholder': ( 'vs_vvp.form.actor.videos_placeholder' | trans( {},'VanzVideoPlayer' ) )
        }}) }}
    </div>
    
    <div class="row">&nbsp;</div>
    
    {{ vs_form.buttons( form ) }}
    
{{ form_end(form, {'render_rest': false}) }}